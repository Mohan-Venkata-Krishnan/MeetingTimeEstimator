<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txtLightColor">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/txtLightColor"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Light"></android.support.v7.widget.Toolbar>

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/synced_calendar_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/txtLightColor"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/time_slot"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/time_slot"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/txtLightColor"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/date_picker"
        app:layout_constraintTop_toBottomOf="@id/synced_calendar_spinner" />


    <LinearLayout
        android:id="@+id/date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/time_slot">

        <EditText
            android:id="@+id/from_date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="false"
            android:hint="From"
            android:inputType="datetime"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/to_date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="false"
            android:hint="To"
            android:inputType="datetime"
            android:textAlignment="center" />

    </LinearLayout>

    <Button
        android:id="@+id/calculate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/calculate_button"
        android:outlineAmbientShadowColor="@color/bgDarkColor"
        android:text="Run Analytics"
        android:textAllCaps="false"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintTop_toBottomOf="@id/date_picker" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/txtLightColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calculate"
        >

        <android.support.constraint.ConstraintLayout
            android:id="@+id/innerLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/scrollView"
            android:background="@color/txtLightColor">

            <TextView
                android:id="@+id/total_time_spent_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingTop="10dp"
                android:text="Total Hours Spent"
                android:textAlignment="center"
                android:textStyle="bold" />

            <com.github.anastr.speedviewlib.TubeSpeedometer
                android:id="@+id/confirmed_meeting_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/total_time_spent_text"
                app:sv_maxSpeed="0.1"
                app:sv_unit="Hour(s)"
                app:sv_withTremble="false" />

            <View
                android:id="@+id/horizontal_line_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/ms__padding_top"
                android:background="#817f7f"
                app:layout_constraintTop_toBottomOf="@id/confirmed_meeting_time" />

            <TextView
                android:id="@+id/top_time_events_text"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/horizontal_line_1" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/linear_chart"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:layout_constraintTop_toBottomOf="@id/top_time_events_text" />

            <View
                android:id="@+id/horizontal_line_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/ms__padding_top"
                android:background="#817f7f"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/linear_chart" />

            <TextView
                android:id="@+id/top_time_confirmed_events_text"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/horizontal_line_2" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/linear_confirmed_chart"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:layout_constraintTop_toBottomOf="@id/top_time_confirmed_events_text" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>